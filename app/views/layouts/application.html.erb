<!DOCTYPE html>
<html>

<head>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>

        <meta charset="utf8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
          <title>Subcalendar</title>
              <%= csrf_meta_tags %>
              <%= csp_meta_tag %>
        <meta name="viewport" content="width=device-width">

        <%= stylesheet_link_tag "application", media: "all" %>
        <%= javascript_include_tag "application" %>
</head>

  <body>

   <header>
      <div class="header-text">
              <p>
              SUBCALENDAR
              </p>
      </div>
    </header>

      <div id="hm-icon">
         <a class="menu-trigger" href="#">
           <span></span>
           <span></span>
           <span></span>
         </a>
       </div>

    

          <% if user_signed_in? %>
          <div id="sp-menu">
              <li><a href="#">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class:"glyphicon glyphicon-log-out", data: {confirm: "ログアウトしますか？"} %>
              </a></li>
              <li><a href="#">
                <%= link_to 'マイページ', user_path(current_user.id), class:"glyphicon glyphicon-home" %>
              </a></li>
              <li><a href="#">
                <%= link_to "ユーザー一覧", users_path, class:"glyphicon glyphicon-user" %>
              </a></li>

              <li><a href="#">
                <%= link_to '投稿一覧', post_images_path,class:"glyphicon glyphicon-list-alt" %>
              </a></li>

              <li><a href="#">
                  <%= link_to '投稿フォーム', new_post_image_path,class:"glyphicon glyphicon-share" %>
              </a></li>

              <li><a href="#">
                <%= link_to "HowtoUse", post_images_top2_path, class:"glyphicon glyphicon-question-sign" %>
              </a></li>

          </div>
          <% else %>
            <div id="sp-menu">
              <li><a href="#">
                <%= link_to "新規登録", new_user_registration_path, class:"glyphicon glyphicon-record" %>
              </a></li>
              <li><a href="#">
                <%= link_to "ログイン", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
              </a></li>
              <li><a href="#">
                <%= link_to '投稿一覧', post_images_path, class:"glyphicon glyphicon-list-alt" %>
              </a></li>

              <li><a href="#">
                <%= link_to "HowtoUse", post_images_top2_path, class:"glyphicon glyphicon-question-sign" %>
              </a></li> 
            </div>
          <% end %>
    <%= yield %>

    <span id="back">
        <a href="#">
          <%= image_tag "arrow.png"%>
        </a>
    </span>
    
   <footer>
      <div class="footer-text">
              <p>
              他人の予定から新しいものに出会えるSNS
              </p>
      </div>
    </footer>
  </body>
</html>
