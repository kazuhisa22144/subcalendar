<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-9">
      <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback:"no_image.jpg",size: '50x50' %>
              </td>
              <td>
              <%= user.name %>
              </td>
              <td>
              <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>